{
  "name": "@maximedogawa/chia-wallet-connect-react",
  "version": "0.0.2",
  "description": "WalletConnect plugin for Chia blockchain",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "tailwind.config.js",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/styles/globals.css",
    "./tailwind.config": "./tailwind.config.js"
  },
  "scripts": {
    "prepare": "npm run build",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json && mkdir -p dist/styles && cp src/styles/globals.css dist/styles/globals.css && node scripts/generate-dist-package.js",
    "lint": "eslint . --max-warnings 20",
    "lint:fix": "eslint . --fix",
    "prehook": "husky"
  },
  "keywords": [
    "chia",
    "walletconnect",
    "wallet",
    "blockchain",
    "crypto",
    "plugin"
  ],
  "author": "MaximEdogawa",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/maximEdogawa/chia-wallet-connect.git"
  },
  "homepage": "https://github.com/maximEdogawa/chia-wallet-connect#readme",
  "bugs": {
    "url": "https://github.com/maximEdogawa/chia-wallet-connect/issues"
  },
  "peerDependencies": {
    "next": "^16.0.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.14",
    "@reduxjs/toolkit": "^1.9.5",
    "@walletconnect/modal": "^2.7.0",
    "@walletconnect/sign-client": "^2.23.0",
    "@walletconnect/types": "^2.7.6",
    "axios": "^1.3.5",
    "bech32": "^2.0.0",
    "qrcode.react": "^3.1.0",
    "react-hot-toast": "^2.4.1",
    "react-redux": "^8.1.2",
    "redux-persist": "^6.0.0",
    "swr": "^2.2.5"
  },
  "devDependencies": {
    "@types/canvas-confetti": "^1.6.0",
    "@types/node": "18.15.11",
    "@types/react": "18.0.35",
    "@types/react-dom": "18.0.11",
    "@types/react-redux": "^7.1.26",
    "@types/react-window": "^1.8.5",
    "@vercel/analytics": "^1.0.1",
    "@walletconnect/auth-client": "^2.1.2",
    "autoprefixer": "^10.4.14",
    "canvas-confetti": "^1.6.0",
    "date-fns": "^2.30.0",
    "eslint": "^8.50.0",
    "eslint-config-next": "13.3.0",
    "eslint-plugin-import": "^2.28.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "next": "^16.0.1",
    "next-pwa": "^5.6.0",
    "postcss": "^8.4.21",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-spinners": "^0.13.8",
    "react-transition-group": "^4.4.5",
    "react-virtualized-auto-sizer": "^1.0.20",
    "react-window": "^1.8.9",
    "redux-persist": "^6.0.0",
    "tailwindcss": "^3.3.1",
    "typescript": "^5.1.0",
    "tsc-alias": "^1.8.16"
  },
  "overrides": {
    "fast-redact": "^3.5.0",
    "pino": "^10.1.0"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "eslint --fix --max-warnings 0"
    ]
  }
